{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "tsDist",
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCaseOnly",
          "options": {
            "renderOptions": {
              "less": {
                "paths": ["src/"]
              }
            }
          }
        }
      }
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
